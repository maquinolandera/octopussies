extends ./layout.jade
block content
   
            h1
                a(href="/")=title
            article.item
                div.item
                    if(data.length)
                        table.table
                            tr
                                th Id
                                th Titulo
                                th AÃ±o
                               
                                th Poster
                                th(colspan="2")
                                    form(method="get" action="/agregar")
                                        input.button.add(type="submit")
                                
                            each movie in data
                                tr
                                    td #{movie.movie_id}
                                    td #{movie.title}
                                    td #{movie.release_year}

                                    td
                                        img.poster(src="#{movie.image}",alt="movie.title")
                                    td 
                                        form(method="GET",action="/editar/#{movie.movie_id}")
                                            input(type="submit",value="Editar")
                                    td
                                        form(method="POST",action="/eliminar/#{movie.movie_id}")
                                            input(type="button",value="Eliminar" onclick="eliminar(this)")  

                        script.
                            function eliminar(input)
                            {
                                var deleteOk = confirm('Estas seguro de eliminar la pelicula')
                                return (deleteOk) ? input.parentNode.submit() : false
                            }

                    else
                        p.error No existen Peliculas en la BBDD

    

 

